public class Bicicleta {
    String marca;
    String cor;
    String tipo;
    int tamanhoRoda;

    public Bicicleta(String marca, String cor, String tipo, int tamanhoRoda) {
        this.marca = marca;
        this.cor = cor;
        this.tipo = tipo;
        this.tamanhoRoda = tamanhoRoda;
    }

    public void pedalar() {
        System.out.println("Pedalando a bicicleta...");
    }

    public void frear() {
        System.out.println("Freando a bicicleta!");
    }

    public void trocarMarcha() {
        System.out.println("Marcha trocada!");
    }

    public void parar() {
        System.out.println("A bicicleta parou.");
    }
}
